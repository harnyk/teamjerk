    "version": "0.2.0",
    "configurations": [
        {
            "name": "login",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/teamjerk/main.go",
            "console": "integratedTerminal",
            "args": ["login"]
        },
        {
            "name": "whoami",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/teamjerk/main.go",
            "console": "integratedTerminal",
            "args": ["whoami"]
        },
        {
            "name": "projects",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/teamjerk/main.go",
            "console": "integratedTerminal",
            "args": ["projects"]
        },
        {
            "name": "tasks",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/teamjerk/main.go",
            "console": "integratedTerminal",
            "args": ["tasks"]
        },
        {
            "name": "log ...",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/teamjerk/main.go",
            "console": "integratedTerminal",
            "args": [
                "log",
                "-p", //project
                "1",
                "-t", //task
                "1",
                "-d", //date
                "2020-01-01",
                "-s", //start time
                "10:00",
                "-u", //duration
                "8",
                "-n", //dry run
                "-B" //non billable
            ]
        },
        {
            "name": "report",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/teamjerk/main.go",
            "console": "integratedTerminal",
            "args": ["report"]
        },
        {
            "name": "report -y 2023 -m 1",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/teamjerk/main.go",
            "console": "integratedTerminal",
            "args": ["report", "-y", "2023", "-m", "1"]
        },
        {
            "name": "version",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/teamjerk/main.go",
            "console": "integratedTerminal",
            "args": ["version"]
        }
